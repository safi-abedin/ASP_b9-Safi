    <script>
        $(function () {
            $("#questions").DataTable({
                serverSide: true,
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                searching: false,
                ajax: {
                    url: "/User/Questions/GetQuestions",
                    type: "POST",
                },
                columns: [
                    { data: "title", orderable: false },
                    { data: "body", visible: false },
                    { data: "tags", visible: false },
                    { data: "id", visible: false }
