@using StackOverFlow.Infrastructure.Membership
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Manage" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {

        <style>
            .btn-login:hover {
                background-color: #d1ecf1; /* Light blue */
            }
        </style>

        <li class="nav-item">
            <a class="nav-link btn btn-outline-primary  rounded-3 me-2 btn-login" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary text-white rounded-3" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
</ul>

