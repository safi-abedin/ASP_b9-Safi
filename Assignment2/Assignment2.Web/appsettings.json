{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=aspnet-Assignment2.Web-211caed7-3dde-4444-b8ca-2168f93c2ca7;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      },
      "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.File" ,"Serilog.Sinks.Email"]
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/web-log-.log",
          "rollingInterval": "Day",
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm} [{Level}] {Message}{NewLine}{Exception}"
        },
        "RestrictedToMinimumLevel": "Verbose"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=DESKTOP-LNM2C8V\\SQLEXPRESS;Integrated Security=true;Database=Assignment2;Trust Server Certificate=True;",
          "tableName": "Logs",
          "autoCreateSqlTable": true
        },
        "RestrictedToMinimumLevel": "Verbose",
        "batchPostingLimit": 50
      },
      {
        "Name": "Email",
        "Args": {
          "ConnectionInfo": {
            "FromEmail": "testSendLogs@localhost.com",
            "ToEmail": "safi@localhost.com",
            "Port": "25",
            "MailServer": "localhost",
            "EnableSsl": false,
            "EmailSubject": "Exception in Serilog Log in Assignment2.Web"
          },
          "RestrictedToMinimumLevel": "Fatal",
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm} [{Level}] {Message}{NewLine}{Exception}",
          "batchPostingLimit": 100
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
